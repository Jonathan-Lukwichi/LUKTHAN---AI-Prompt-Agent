# Backend Environment Variables
# Copy this to .env and fill in your values

# Database (SQLite for dev, PostgreSQL for production recommended)
DATABASE_URL=sqlite:///./lukthan.db
# For production, use: postgresql://user:password@host:5432/dbname

# API Keys - REQUIRED: Get your key from https://console.anthropic.com/
ANTHROPIC_API_KEY=


# Application
DEBUG=false
SECRET_KEY=generate_a_secure_random_key_here

# CORS - Add your frontend URL(s)
ALLOWED_HOSTS=https://your-frontend-domain.vercel.app,http://localhost:5173
